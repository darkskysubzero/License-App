<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.licenseapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:requestLegacyExternalStorage="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LicenseApp"
        tools:targetApi="31">
        <activity
            android:screenOrientation="portrait"
            android:name=".Messages.Messages"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".MyInformation"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".BookDriving"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".BookLearners"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".OrderReceipt"
            android:exported="false" />
        <activity
            android:screenOrientation="portrait"
            android:name=".Payment"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:screenOrientation="portrait"
            android:name=".RenewLicense"
            android:exported="false" />
        <activity
            android:name=".Dashboard"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Signup.SignupSB"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".Signup.SignupSA"
            android:exported="false"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ForgotPassword.ForgotPasswordSB"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ForgotPassword.ForgotPasswordSA"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Login.Login"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>